{
    "manifest_version": 3,
    "name": "YouTube Dislikes Viewer",
    "version": "1.0",
    "description": "View the number of dislikes for a YouTube video.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://ml-yt-api.fly.dev/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}